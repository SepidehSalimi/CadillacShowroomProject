@section Scripts {

    <script src="~/vendors/data-tables/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/data-tables/extensions/responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/vendors/data-tables/js/dataTables.select.min.js"></script>
    <script src="~/js/scripts/data-tables.min.js"></script>
    <script src="~/js/scripts/advance-ui-modals.min.js"></script>
    <script src="~/js-rtl/scripts/form-file-uploads-rtl.min.js"></script>
    <script src="~/vendors/dropify/js/dropify.min.js"></script>
    <script>

        $("#searchInput").on("keyup", function () {
                var search = $(this).val();
                $.ajax({
                url: "/Cars/search",
                    data: { search },
                    type: "Get",
                    success: function (data) {
                        $("#myTable").html('').html(data);
                    },
                });
        });

        $(document).ready(function () {



            var currentRow;
            String.prototype.toEnglishDigits = function () {
                var num_dic = {
                    '۰': '0',
                    '۱': '1',
                    '۲': '2',
                    '۳': '3',
                    '۴': '4',
                    '۵': '5',
                    '۶': '6',
                    '۷': '7',
                    '۸': '8',
                    '۹': '9',
                }

                return parseInt(this.replace(/[۰-۹]/g, function (w) {
                    return num_dic[w]
                }));
            }

            $(".btnEdit").click(function () {
                $('#modal1').modal('open');
                currentRow = $(this).closest("tr");
                $("#id").val(currentRow.find("td:eq(0)").text().toEnglishDigits());
                $("#Title").val(currentRow.find("td:eq(1)").text());
                $("#price").val(currentRow.find("td:eq(2)").text());
                $("#Year").val(currentRow.find("td:eq(3)").text());
                $("#brand").val(currentRow.find("td:eq(4)").text());
                $("#model").val(currentRow.find("td:eq(5)").text());
                $("#descript").val(currentRow.find("td:eq(6)").text());
                var col5 = currentRow.find("td:eq(7)").children('img').attr("id");
                ("#pic").attr("data-default-file", "~/images/cars/" + col5);
            });
            $(".btnDelete").click(function () {
                $('#modal2').modal('open');
                currentRow = $(this).closest("tr");
                $("#deleteid").val(currentRow.find("td:eq(0)").text().toEnglishDigits());
                $("#tname").text(currentRow.find("td:eq(1)").text());
                $("#tfamily").text(currentRow.find("td:eq(2)").text());

            });
            $("#closeDelete").click(function () {
                $("#modal2").modal("close");
            })
            $("#dlbtn").click(function () {
                var iddelete = $("#deleteid").val();
                $.ajax({
                    url: "/Cars/Delete/",
                    data: { iddelete },
                    type: "Post",
                    success: function (data) {
                        $('#modal2').modal('close');
                        $("#myTable").html('').html(data);
                    },
                    Error: function () {
                        alert("خطا")
                    }
                });
            });
            $("#editForm").submit(function (e) {

                var form = new FormData(this);
                e.preventDefault();
                $.ajax({
                    url: "/Cars/update/",
                    data: form,
                    type: "Post",
                    enctype: "multipart/form-data",
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        $('#modal1').modal('close');
                        var Title = $("#Title").val();
                        var price = $("#price").val();
                        var Year = $("#Year").val();
                        var brand = $("#brand").val();
                        var model = $("#model").val();
                        var descript = $("#descript").val();
                        currentRow.find("td:eq(1)").text(Title);
                        currentRow.find("td:eq(2)").text(price);
                        currentRow.find("td:eq(3)").text(Year);
                        currentRow.find("td:eq(4)").text(brand);
                        currentRow.find("td:eq(5)").text(model);
                        currentRow.find("td:eq(6)").text(descript);

                    },
                    Error: function () {
                        alert("خطا")
                    }
                });
            });
        });

    </script>
