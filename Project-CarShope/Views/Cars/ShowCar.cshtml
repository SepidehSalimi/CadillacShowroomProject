                        <input type="hidden" name="id" id="id" value="" />
                        <label class="contact-input">عنوان</label>
                        <input type="text" id="Title" name="Title">

                    </div>


                    <div class="col s12">
                        <label class="contact-input">قیمت</label>
                        <input type="number" id="price" name="price">
                    </div>


                    <div class=" col s12">
                        <label class="contact-input">سال تولید</label>
                        <input id="Year" type="number" name="Year">
                    </div>
                    <div class=" col s12">
                        <label class="contact-input">برند</label>
                        <input id="brand" type="text" name="brand">
                    </div>
                    <div class=" col s12">
                        <label class="contact-input">مدل</label>
                        <input id="model" type="text" name="model">
                    </div>

                    <div class=" col s12">
                        <label class="contact-input">توضیحات</label>
                        <textarea id="descript" name="descript" class="min-height-250"></textarea>
                    </div>
                    <div class="col m12">
                        <label>عکس</label>
                        <input name="pic" type="file" id="pic" class="dropify" />
                    </div>
                   

                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn cyan waves-effect waves-light right" type="submit" name="action">
                            تصحیح
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
